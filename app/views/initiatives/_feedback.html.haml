= form_for(:feedback, :url => {:controller => "feedbacks", :action => 'create',:initiative_id => @initiative.id, :user_id => current_user.id}) do |f|
  = f.hidden_field :survay_id, :value => @survay.id                   
  = f.text_area :answer,:cols =>5 , :rows => 10, class: 'form-control'
  .green-btn.btn.input
    = f.submit "تسجيل الإجابة"
